---
import {projects} from '../../config/projects.json'
---

<section>
    <h2 class="font-bold text-4xl my-4 text-center">Projects</h2>
    {
        projects.map((project) => (
            <div class="flex mb-5 bg-slate-800 p-4 rounded-2xl flex-col md:flex-row text-center md:text-left">
                <div class="flex-1 mb-8">
                    <h2 class="text-2xl mb-2">{project.title}</h2>
                    <p class="py-7">{project.description}</p>
                    <button class="bg-indigo-700 hover:bg-indigo-500 px-4 py-2 rounded-md text-center">More...</button>
                </div>
                <div class="text-center flex-1">
                    <img src={project.image} alt="image" class="w-40 m-auto">
                </div>

            </div>
        ))
    }
</section>

