---
import features from "../../config/features.json";
---

<h1 class="text-center font-bold text-4xl my-3">Features</h1>

<div class="grid grid-rows-1 md:grid-cols-3 gap-4 text-center md:text-left">
    {
        features.map((feature) => (
            <div class="bg-slate-800 p-2 rounded-lg">
                <h2 class="text-2xl pb-2">{feature.title}</h2>
                <p>{feature.description}</p>
            </div>
        ))
    }
</div>

